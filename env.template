# SanMar API Credentials - Server Side (Backend)
SANMAR_CUSTOMER_NUMBER=YOUR_CUSTOMER_NUMBER
SANMAR_USERNAME=YOUR_USERNAME
SANMAR_PASSWORD=YOUR_PASSWORD

# API Configuration - Server Side
SANMAR_USE_TEST=true  # Set to 'true' for test environment, 'false' for production
SANMAR_BACKEND=promostandards  # Options: promostandards, webservice
HTTP_TIMEOUT_SECONDS=30  # API request timeout in seconds

# Vite Frontend Environment Variables
# These will be available in the browser via import.meta.env
VITE_API_BASE_URL=  # Leave empty to use relative URLs in production
# For local development with server.js running on port 3001:
# VITE_API_BASE_URL=http://localhost:3001

# Direct SanMar API Access - Client Side (Frontend)
# Only needed if you want to make direct SOAP calls from the frontend
VITE_USE_DIRECT_SANMAR=false  # Set to 'true' to enable direct SOAP calls from browser
VITE_SANMAR_USERNAME=YOUR_USERNAME  # Only if VITE_USE_DIRECT_SANMAR=true
VITE_SANMAR_PASSWORD=YOUR_PASSWORD  # Only if VITE_USE_DIRECT_SANMAR=true
VITE_SANMAR_CUSTOMER_NUMBER=YOUR_CUSTOMER_NUMBER  # Only if VITE_USE_DIRECT_SANMAR=true
VITE_SANMAR_USE_TEST=true  # Set to 'true' for test environment, 'false' for production
VITE_CORS_PROXY_URL=  # CORS proxy URL for direct SOAP calls (e.g., https://cors-anywhere.herokuapp.com/)
